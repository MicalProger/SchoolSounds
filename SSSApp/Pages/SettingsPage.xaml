<Page x:Class="SSSApp.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SSSApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="650"
      Title="SettingsPage">

    <Grid>
        <StackPanel>
            <Button Content="Назад" Margin="5" Padding="5" HorizontalAlignment="Left" Click="Button_Click"/>
            <TextBlock Text="Музыка звонка" Margin="5" ToolTip="Поддерживаются форматы .wav и .mp3"/>
            <TextBox Text="{Binding CallMisic}" Margin="5" TextWrapping="Wrap"/>
            <Button Content="Выбрать" Margin="5" Padding="5" HorizontalAlignment="Left"/>
            <TextBlock Text="Длительность урока" Margin="5" ToolTip="В целых минутах"/>
            <TextBox Text="{Binding LsDuration}" Margin="5"/>
            <TextBlock Text="" Margin="5"/>
            <TextBox Text="{Binding a}" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
